
<header class="border-section">
    <img src="assets/img/burger.png" style="height: 200px; width: 200px;" />
</header>

<div class="lettuce border-section"></div>
<div class="cheese border-section"></div>

<main class="border-section">
    <section class="container">
        <div class="row">
            <div class="col-md-6">
                <h3>To Be Devoured...</h3>
                <div class="devour">
                    <table class="w-100">
                    {{#each burger}} {{#unless devoured}}
                        {{> burger/burger-block }}
                    {{/unless}} {{/each}}
                    </table>
                </div>
            </div>
            <div class="col-md-6">
                <h3>Devoured</h3>
                <div class="devour">
                    <table class="w-100">
                    {{#each burger}} {{#if devoured}}
                        {{> burgers/burger-block }}
                    {{/if}}{{/each}}
                    </table>
                </div>
            </div>
        </div>
    </section>

    <section style="margin-top: 20px;">
        <h3>Add a burger</h3>
        <form class="create-form">
            <div class="form-group">
                <textarea 
                    id="burger" 
                    name="burger_name" 
                    placeholder="Enter the buger you want to eat..." 
                    maxlength="255"
                ></textarea>
            </div>
            <button type="submit">Add Burger!</button>
        </form>
    </section>
</main>